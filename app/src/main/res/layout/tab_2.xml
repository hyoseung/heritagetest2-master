<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.example.owl.heritage.Tab_2">

    <AutoCompleteTextView
        android:id="@+id/search_heritage"
        android:layout_width="217dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/query"
        android:hint="ex)경복궁, 창덕궁" />


    <Button
        android:id="@+id/query"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="30dp"
        android:text="검색" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/종로구"
                android:layout_width="376dp"
                android:layout_height="103dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/jongro"
                android:onClick="ButtonClicked_Jongro"
                android:scaleType="fitCenter" />


            <Button
                android:id="@+id/중구"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/junggu"
                android:onClick="ButtonClicked_Junggu" />

            <Button
                android:id="@+id/은평서대문구"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:onClick="ButtonClicked_EunpyeonSeodaemun"
                android:background="@drawable/eunpyeonseodaemun"/>

            <Button
                android:id="@+id/서초강남"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/gangnamseocho"
                android:onClick="ButtonClicked_SeochoGangnam" />

            <Button
                android:id="@+id/영동관금"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/yongdonggwankum"
                android:onClick="ButtonClicked_YongDongGwanKum" />

            <Button
                android:id="@+id/강동송파"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/gangdongsongpa"
                android:onClick="ButtonClicked_GangdongSongpa" />

            <Button
                android:id="@+id/중동성광"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/jungdongseounggwang"
                android:nestedScrollingEnabled="true"
                android:onClick="ButtonClicked_JungDongSeoungGwang" />

            <Button
                android:id="@+id/마포용산"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/mapoyobgsan"
                android:onClick="ButtonClicked_MapoYongsan" />

            <Button
                android:id="@+id/도봉노원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"

                android:background="@drawable/nowondobong"
                android:onClick="ButtonClicked_DobongNowon" />

            <Button
                android:id="@+id/강북성북"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/gangbukseongbuk"
                android:onClick="ButtonClicked_GangbukSeongbuk" />

            <Button
                android:id="@+id/강서양천구로"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/gangyanggu"
                android:onClick="ButtonClicked_GangYangGu" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>